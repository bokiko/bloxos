# ===========================================
# BloxOs Environment Configuration
# ===========================================
# Copy this file to .env and update values

# Database (PostgreSQL) - port 5433 to avoid conflicts
DATABASE_URL=postgresql://bloxos:bloxos_dev_password@localhost:5433/bloxos

# Redis - port 6380 to avoid conflicts
REDIS_URL=redis://localhost:6380

# API Server
API_PORT=3001
API_HOST=0.0.0.0
JWT_SECRET=change-this-to-a-secure-random-string
API_KEY_SALT=change-this-to-another-secure-string

# Dashboard
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Agent Configuration (set on mining rigs)
# BLOXOS_SERVER_URL=ws://your-server-ip:3001
# BLOXOS_RIG_TOKEN=generate-unique-token-per-rig

# Notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=

# Production
NODE_ENV=development
